{
  "name": "promise.extra",
  "version": "3.0.5",
  "description": "series, waterfall and more with vanilla es promise/thenable.",
  "main": "lib/index.js",
  "scripts": {
    "build:cjs": "babel src --out-dir lib",
    "build": "npm run build:cjs",
    "test": "nyc ava --verbose --timeout=10s",
    "test-no-cov": "ava --verbose --timeout=10s",
    "prepublish": "npm run build",
    "report-cov": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kaelzhang/promise.extra.git"
  },
  "keywords": [
    "promise.extra",
    "promise",
    "promise.series",
    "promise.waterfall",
    "waterfall",
    "extra",
    "async",
    "es2015",
    "find",
    "findIndex",
    "some",
    "every",
    "reduce"
  ],
  "ava": {
    "require": "@babel/register",
    "babel": {
      "testOptions": {
        "babelrc": true
      }
    }
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "author": "kaelzhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaelzhang/promise.extra/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "ava": "^1.3.1",
    "bluebird": "^3.5.3",
    "codecov": "^3.2.0",
    "nyc": "^13.3.0",
    "promise-faker": "^1.2.5"
  }
}
